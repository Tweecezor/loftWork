
script(type="text/x-template")#works_content
  div(v-if="isDownloaded")
    .works__title-wrap
      h1.works__title.title Мои работы
    .works__content
        pictures(
            :currentIndex="currentIndex"
            :works="splicedWorks"
            :currentWork="currentWork"
            @slide="changeSlide"
        )
        info(
            :currentWork="currentWork"
        )
  div(v-else)
    h1 Загрузка

    
script(type="text/x-template")#works_pictures
  .works__pictures
    .works__image-wrap
    transition-group(
      tag="div"
      @before-enter="beforeEnter"
      @after-enter="afterEnter"
      @leave="leave"
      @after-leave="afterEnter"
    )
      img(:key="currentWork.photo" :src="currentWork.photo").works__image
        
    .works__index-wrap
        .works__index {{currentIndex+1}}
    preview(
        :works="works"
        :currentIndex="currentIndex"
        :currentWork="currentWork"
        @slide="handleSlide"
    )
    btns(
        :currentIndex="currentIndex"
        :works="works"
        @changeSlide="slideWork"
    )   
        
        
script(type="text/x-template")#works_info
  .works__info
    tags(:currentTags="currentWork.techs")
    .works__info-title-wrap
        .works__info-title {{currentWork.title}}
    .works__info_desc
        p {{currentWork.description}}
    .works__info_link
        a(:href="currentWork.link").iconed-link Посмотреть сайт

script(type="text/x-template")#works_tags
  ul.works__info-tags-list
    li.works__info-tags-item(v-for="tag in tags")
        .tag {{tag}}


script(type="text/x-template")#works_preview
  .works__preview
    ul.works__preview_list
      li.works__preview_item(v-for="work in works")
        img(:src="work.photo" :class="{active:currentWork.id === work.id}").works__preview_image
       
        


script(type="text/x-template")#works_btns
  .works__btn-wrap
    button(@click="slide('next')" :disabled="disableNext").works__btn.works__btn-next >
